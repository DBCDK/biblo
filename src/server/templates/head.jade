//- head.jade

head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    meta(name='env' content=env)
    meta(name='viewport' content='user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1')
    meta(http-equiv='X-UA-Compatible' content='IE=Edge,chrome=1')
    meta(name='theme-color' content='#000000')
    meta(name='description' content='Biblo er bibliotekernes nye website til børn under 14 år. Her kan man finde grupper om alt muligt, deltage i konkurrencer og snart låne bøger, film, spil og musik.')
    link(rel='shortcut icon', href!=faviconUrl, type='image/x-icon ')

    title!= title

    block styles
        link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/normalize/4.0.0/normalize.min.css')

    block scripts
        if newrelic
          include newrelic
        if production
            script(src='//cdnjs.cloudflare.com/ajax/libs/react/0.14.8/react.min.js', type='text/javascript' defer=true)
            script(src='//cdnjs.cloudflare.com/ajax/libs/react/0.14.8/react-dom.min.js', type='text/javascript' defer=true)
        else
            script(src='//cdnjs.cloudflare.com/ajax/libs/react/0.14.8/react.js', type='text/javascript' defer=true)
            script(src='//cdnjs.cloudflare.com/ajax/libs/react/0.14.8/react-dom.js', type='text/javascript' defer=true)

        script(src='https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.6.1/lodash.min.js', type='text/javascript' defer=true)
        script(src='https://cdnjs.cloudflare.com/ajax/libs/modernizr/3.3.1/modernizr.js', type='text/javascript', defer=true)

        // Set by the globals.middleware.js
        script window.USER_IS_LOGGED_IN = !{isLoggedIn || false};



