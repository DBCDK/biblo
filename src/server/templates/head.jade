//- head.jade

head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    meta(name='robots' content='noindex, nofollow')
    meta(name='env' content=env)
    meta(name='viewport' content='user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1')
    meta(http-equiv='X-UA-Compatible' content='IE=Edge,chrome=1')

    title!= title

    block styles
        link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css')

    block scripts
        if newrelic
            != newrelic.getBrowserTimingHeader()
        if production
            script(src='//cdnjs.cloudflare.com/ajax/libs/react/0.14.7/react.min.js', type='text/javascript' defer=true)
            script(src='//cdnjs.cloudflare.com/ajax/libs/react/0.14.7/react-dom.min.js', type='text/javascript' defer=true)
        else
            script(src='//cdnjs.cloudflare.com/ajax/libs/react/0.14.7/react.js', type='text/javascript' defer=true)
            script(src='//cdnjs.cloudflare.com/ajax/libs/react/0.14.7/react-dom.js', type='text/javascript' defer=true)

        script(src='https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.0.0/lodash.min.js', type='text/javascript' defer=true)
        script(src='https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.js', type='text/javascript', defer=true)

        link(rel='shortcut icon', href!=faviconUrl, type='image/x-icon ')
