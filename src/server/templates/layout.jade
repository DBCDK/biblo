//- layout.jade

doctype html
html(lang='da')
    include head

    body(class=libdata ? libdata.bodyclass : '')
        #message
            include message

        block top
          header#header !{headerString}

        block content

        div.responsetime--container
            small.responsetime Page was rendered in: %RENDERTIME%ms. Serviceprovider %SERVICETIME%

        block bottom
          footer#footer !{footerString}
          script window.footerData = '!{footerData}';

    include footer
